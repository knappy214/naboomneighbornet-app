{
  "cli": { "version": ">= 13.0.0" },
  "build": {
    "preview": {
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false },
      "env": {
        "EXPO_PUBLIC_API_BASE": "https://naboomneighbornet.net.za",
        "EXPO_PUBLIC_API_V2_BASE": "https://naboomneighbornet.net.za/api/v2",
        "EXPO_PUBLIC_VEHICLE_TOKEN": "<dev-vehicle-token>",
        "EXPO_PUBLIC_ENABLE_TRACKING": "1"
      }
    },
    "production": {
      "distribution": "store",
      "env": {
        "EXPO_PUBLIC_API_BASE": "https://naboomneighbornet.net.za",
        "EXPO_PUBLIC_API_V2_BASE": "https://naboomneighbornet.net.za/api/v2"
      }
    },
    "dev-relay": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": { "simulator": false },
      "env": {
        "EXPO_PUBLIC_API_BASE": "https://naboomneighbornet.net.za",
        "EXPO_PUBLIC_API_V2_BASE": "https://naboomneighbornet.net.za/api/v2",
        "EXPO_PUBLIC_ENABLE_RELAY": "1",
        "EXPO_PUBLIC_ENABLE_TRACKING": "1"
      }
    }
  },
  "submit": {
    "production": {
      "android": { "track": "internal" },
      "ios": {
        "appleId": "<appleid@domain>",
        "ascAppId": "<App Store Connect App ID>"
      }
    }
  }
}
